{
	"description": "The basic zero-shot CoT reasoning of GPT-4o on MATH500",
	"dataset": "MATH500",
	"model": "Qwen/Qwen2.5-Math-1.5B-Instruct",
	"type": "train-lora",
	"training_dataset": ["augdata/tor1.jsonl", "augdata/tor2.jsonl", "augdata/tor3.jsonl", "augdata/tor4.jsonl"],
  "vali_dataset": "datasets/test.jsonl",
	"eval_datasets": ["datasets/test.jsonl"],
	"infer_prompt": "You need to solve the problem below step by step, and put your final answer within \\boxed{}.",

  "log_dir": "./training_logs",
  
  "sftparams": {
    "max_seq_length": 2048,
    "per_device_train_batch_size": 2,
    "use_liger": true,
    "num_train_epochs": 4.0
  },

  "lora_config": {
    "r": 8,
    "inference_mode": false,
    "lora_alpha": 32,
    "lora_dropout": 0.01
  }
}
